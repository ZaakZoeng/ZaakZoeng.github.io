{% if site.footer_fixed %}
  <footer class="fixed-bottom" role="contentinfo">
    <!-- Global Visitors -->
    <br>
    <div align="center">
      <a target="_blank" rel="noopener" href="https://clustrmaps.com/site/1btd7" title="Visit tracker">
        <img
          src="//clustrmaps.com/map_v2.png?cl=ffffff&amp;w=150&amp;t=tt&amp;d=K-mCdGgLPA7nDneZW-i36H0i_HTaLAvrBuNSDxCEoDI&amp;co=2d78ad&amp;ct=ffffff">
      </a>
    </div>
    <div class="container mt-0">
      &copy; Copyright {{ site.time | date: '%Y' }}
      {{ site.first_name }}
      {{ site.middle_name }}
      {{ site.last_name }}. {{ site.footer_text }}
      {% if site.impressum_path %}
        <a href="{{ site.url }}{{ site.baseurl }}{{ site.impressum_path }}">Impressum</a>.
      {% endif %}
      {% if site.last_updated %}
        Last updated: {{ 'now' | date: '%B %d, %Y' }}.
      {% endif %}
    </div>
  </footer>
{% else %}
  <footer class="sticky-bottom mt-5" role="contentinfo">
    <!-- Global Visitors -->
    <br>
    <div align="center">
      <a target="_blank" rel="noopener" href="https://clustrmaps.com/site/1btd7" title="Visit tracker">
        <img
          src="//clustrmaps.com/map_v2.png?cl=ffffff&amp;w=150&amp;t=tt&amp;d=K-mCdGgLPA7nDneZW-i36H0i_HTaLAvrBuNSDxCEoDI&amp;co=2d78ad&amp;ct=ffffff">
      </a>
    </div>
    <div class="container">
      &copy; Copyright {{ site.time | date: '%Y' }}
      {{ site.first_name }}
      {{ site.middle_name }}
      {{ site.last_name }}. {{ site.footer_text }}
      {% if site.impressum_path %}
        <a href="{{ site.url }}{{ site.baseurl }}{{ site.impressum_path }}">Impressum</a>.
      {% endif %}
      {% if site.last_updated %}
        Last updated: {{ 'now' | date: '%B %d, %Y' }}.
      {% endif %}
    </div>
  </footer>
{% endif %}
